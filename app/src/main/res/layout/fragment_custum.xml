<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Custum">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/spinnerOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="よく使う行事追加"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/spinnertext"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="追加したい行事名"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/spinneradd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="追加" />

            <TextView
                android:id="@+id/spinnerOption2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="よく使う行事削除"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/spinnertext2"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="削除したい行事名"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/spinnerdelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="削除" />

            <TextView
                android:id="@+id/spinnerOption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="背景画像変更"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="変更" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>